---
import fs from 'node:fs/promises'
import { basename } from 'node:path'
import { Code } from 'starlight-theme-nova/components'

interface Props {
  path: string
}

const { path } = Astro.props

let code: string

try {
  code = await fs.readFile(path, 'utf-8')
} catch (error) {
  throw new Error(`Failed to read file ${path}`, { cause: error })
}

let fileName = basename(path)
let lang = (fileName.split('.').pop() || 'plaintext') as 'plaintext'
---

<Code lang={lang} code={code} meta={`title="${fileName}"`} />
