{
  "extends": "@ocavue/tsconfig/dom/app.json",
  "include": [
    "./*.ts",
    "./*.mjs",
    "./*.js",
    "./*.json",
    ".astro/*",
    "build/**/*",
    "build/**/*.json",
    "src/**/*",
    "src/**/*.json",
    "test/**/*",
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "references": [
    {
        "path": "../packages/prosekit/tsconfig.build.json"
    },
    {
        "path": "../packages/prosekit/tsconfig.json"
    },
    {
        "path": "../registry/tsconfig.json"
    }
],
}
