---
import { CardGrid } from '@astrojs/starlight/components'
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import LinkCard from 'starlight-theme-nova/components/LinkCard.astro'
import {
  exampleSidebar,
  stories,
} from '../../example-data'
---

<StarlightPage frontmatter={{ title: 'Examples', tableOfContents: false, pagefind: false }} sidebar={exampleSidebar}>
  <CardGrid>
    {stories.map((item) => <LinkCard title={item.name} href={item.link} description={item.description} />)}
  </CardGrid>
</StarlightPage>
