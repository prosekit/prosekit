    { "path": "./src/examples/lit" },
    { "path": "./src/examples/preact" },
    { "path": "./src/examples/react" },
    { "path": "./src/examples/solid" },
    { "path": "./src/examples/svelte" },
    { "path": "./src/examples/vanilla" },
    { "path": "./src/examples/vue" },
  ],
}
