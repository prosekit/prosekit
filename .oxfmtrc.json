{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "semi": false,
  "singleQuote": true,
  "experimentalSortPackageJson": false,
  "ignorePatterns": [
    "**/node_modules",
    "**/*-lock.json",
    "**/*-lock.yaml",
    "**/*.svg",
    "**/*.gen.*",
    "**/.astro/**/*"
  ]
}
