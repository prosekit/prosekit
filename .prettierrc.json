{
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-astro"],
  "semi": false,
  "singleQuote": true,
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": ["tsconfig.json", "tsconfig.*.json"],
      "options": {
        "parser": "jsonc"
      }
    },
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "htmlWhitespaceSensitivity": "strict"
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "svelteIndentScriptAndStyle": false
}
