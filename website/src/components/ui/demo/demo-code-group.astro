---
import CodeTabItem from 'starlight-theme-nova/components/CodeTabItem.astro'
import CodeTabs from 'starlight-theme-nova/components/CodeTabs.astro'

import { loadDemoFiles } from './load-demo-files'

interface Props {
  story: string
  framework: string
}

const { story, framework }: Props = Astro.props

const codes = await loadDemoFiles({ framework, story })
---

<CodeTabs border={false}>
  {codes.map(code => <CodeTabItem label={code.title} lang={code.lang} code={code.code} />)}
</CodeTabs>
