---
import { CardGrid } from '@astrojs/starlight/components'
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'

import {
  exampleSidebar,
  stories,
} from '../../example-data'
import LinkCardWrapper from '@/components/ui/link-card-wrapper.astro'
import { frameworkIcons } from '@/components/ui/framework-icons'
---

<StarlightPage frontmatter={{ title: 'Examples', tableOfContents: false, pagefind: false }} sidebar={exampleSidebar}>
  <CardGrid>
    {stories.map((item) => (
      <LinkCardWrapper href={item.link}>
        <Fragment slot="title">
          {item.name}
        </Fragment>
        <Fragment slot="description">
          <span class="text-sm text-gray-500 mb-8 inline-flex">{item.description}</span>
          <span class="inline-flex flex-row gap-1 right-6 bottom-4 absolute cursor-pointer">
            {item.frameworks.map((framework) => <span class:list={['size-4', frameworkIcons[framework]]}></span>)}
          </span>
        </Fragment>
      </LinkCardWrapper>
    ))}
  </CardGrid>
</StarlightPage>
