{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["gen", "^build", "build:tsc", "build:tsup"],
      "outputs": ["dist/"],
      "outputLogs": "new-only"
    },
    "build:tsc": {
      "dependsOn": ["^build"],
      "outputs": ["temp/"],
      "outputLogs": "new-only"
    },
    "build:tsup": {
      "dependsOn": ["^build", "build:tsc"],
      "outputs": ["dist/"],
      "outputLogs": "new-only"
    },
    "gen": {
      "inputs": ["src/", "../*/tsconfig.json"],
      "outputs": ["../*/tsconfig.json"],
      "outputLogs": "new-only"
    }
  }
}
