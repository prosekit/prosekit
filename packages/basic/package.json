{
  "name": "@prosekit/basic",
  "type": "module",
  "version": "0.7.3",
  "private": false,
  "description": "A quick starter for ProseKit",
  "author": {
    "name": "ocavue",
    "email": "ocavue@gmail.com"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/prosekit/prosekit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prosekit/prosekit.git",
    "directory": "packages/basic"
  },
  "bugs": {
    "url": "https://github.com/prosekit/prosekit/issues"
  },
  "keywords": [
    "ProseMirror"
  ],
  "sideEffects": false,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./style.css": "./src/style.css",
    "./typography.css": "./src/typography.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "sass --watch --no-source-map ./src/typography.scss ./src/typography.gen.css",
    "build:sass": "sass --no-source-map ./src/typography.scss ./src/typography.gen.css",
    "build:tsc": "tsc -b tsconfig.json",
    "build:tsdown": "tsdown"
  },
  "dependencies": {
    "@prosekit/core": "workspace:^",
    "@prosekit/extensions": "workspace:^",
    "@prosekit/pm": "workspace:^"
  },
  "devDependencies": {
    "@prosekit/config-ts": "workspace:*",
    "@prosekit/config-tsdown": "workspace:*",
    "@prosekit/config-vitest": "workspace:*",
    "@types/jsdom": "^28.0.0",
    "happy-dom": "^20.7.0",
    "jsdom": "^28.1.0",
    "sass": "^1.97.2",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/prosekit-basic.d.ts",
        "default": "./dist/prosekit-basic.js"
      },
      "./style.css": {
        "default": "./dist/style.css"
      },
      "./typography.css": {
        "default": "./dist/typography.css"
      }
    },
    "dev": {},
    "main": "./dist/prosekit-basic.js",
    "module": "./dist/prosekit-basic.js",
    "types": "./dist/prosekit-basic.d.ts",
    "typesVersions": {
      "*": {
        ".": [
          "./dist/prosekit-basic.d.ts"
        ]
      }
    }
  },
  "dev": {
    "entry": {
      "prosekit-basic": "./src/index.ts",
      "style": "./src/style.css",
      "typography": "./src/typography.css"
    }
  }
}
