---
import LanguageSelect from '@astrojs/starlight/components/LanguageSelect.astro'
import Search from './Search.astro'
import SiteTitle from './SiteTitle.astro'
import SocialIcons from './SocialIcons.astro'
import ThemeSelect from './ThemeSelect.astro'
---

<div class="flex items-center gap-2 h-full">
  <div
    class:list={[
      /* Prevent long titles overflowing and covering the search and menu buttons on narrow viewports. */
      'overflow-clip',
      /* Avoid clipping focus ring around link inside title wrapper. */
      'p-1 -m-1',
      'min-w-0',
      'flex',
    ]}
  >
    <SiteTitle />
  </div>
  <div class="hidden md:flex items-center gap-4 text-sm xl:gap-6 ml-4">
    <a class="transition-colors no-underline text-muted-foreground hover:text-accent-foreground font-500" href="/getting-started/introduction">Docs</a>
    <a class="transition-colors no-underline text-muted-foreground hover:text-accent-foreground font-500" href="/examples">Examples</a>
  </div>
  <div class="flex-1"></div>
  <div class="flex print:hidden md:flex-1 md:max-w-60">
    <Search />
  </div>
  <div class="hidden md:flex print:hidden items-center gap-2">
    <SocialIcons />
    <LanguageSelect />
    <ThemeSelect />
  </div>
</div>
