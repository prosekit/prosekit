{
  "extends": "@ocavue/tsconfig/dom/app.json",
  "include": [
    "./*.ts",
    "./*.mjs",
    "./*.js",
    "./*.json",
    ".astro/*",
    "test/**/*",
    "build/**/*",
    "build/**/*.json",
    "src/**/*",
    "src/**/*.json",
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "references": [
    {
      "path": "../packages/config-vitest/tsconfig.json",
    },
    {
      "path": "../packages/prosekit/tsconfig.json",
    },
    {
      "path": "../registry/tsconfig.json",
    },
  ],
}
