{
  "name": "prosekit-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "description": "Monorepo for ProseKit",
  "scripts": {
    "build": "turbo build",
    "build:force": "turbo build --force",
    "build:package": "turbo build --filter='./packages/*' --concurrency=1",
    "build:website": "pnpm --filter='./website' run build",
    "build:typedoc": "pnpm --filter='./website' run build:typedoc",
    "build:css": "pnpm --filter='./website' run build:css",
    "change": "changeset",
    "ci:publish": "pnpm run build:package && pnpm publish --access public -r --no-git-checks --tag latest",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "fix": "pnpm run fix:manypkg && pnpm run gen && pnpm run fix:tsconfig && pnpm run fix:eslint && pnpm run fix:dprint",
    "fix:manypkg": "manypkg fix",
    "fix:dprint": "dprint fmt",
    "fix:eslint": "eslint . --fix",
    "fix:tsconfig": "monorepo-typescript-references fix",
    "dev": "pnpm --filter='./website' run dev",
    "gen": "turbo run gen --force",
    "lint": "eslint . && pnpm -r --sequential run lint",
    "preview": "pnpm --filter='./website' run preview",
    "pretest": "pnpm run test:install",
    "pretest:e2e": "pnpm run test:install",
    "test": "vitest",
    "test:coverage": "vitest run --coverage.enabled",
    "test:e2e": "pnpm --filter='./website' run test",
    "test:install": "playwright install chromium",
    "typecheck": "tsc --build tsconfig.json"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@changesets/types": "^6.1.0",
    "@manypkg/cli": "^0.25.1",
    "@ocavue/eslint-config": "^3.3.3",
    "@ocavue/tsconfig": "^0.4.0",
    "@size-limit/esbuild-why": "^11.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "dprint": "^0.50.1",
    "eslint": "^9.34.0",
    "monorepo-typescript-references": "^1.1.0",
    "pkg-pr-new": "^0.0.58",
    "playwright": "^1.55.0",
    "size-limit": "^11.2.0",
    "turbo": "^2.5.6",
    "typescript": "~5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "rolldown-plugin-dts": "https://pkg.pr.new/rolldown-plugin-dts@98"
    },
    "patchedDependencies": {}
  }
}
